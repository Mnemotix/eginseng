# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#TODO untrail / GET  /*path/  						controllers.Application.untrail(path: String)

# Home page
GET     /                           controllers.Sparql.index()

# SPARQL endpoint
GET     /sparql                     controllers.Sparql.sparqlQuery()
GET     /sparql/                     controllers.Sparql.sparqlQuery()
POST    /sparql                     controllers.Sparql.sparqlQuery()
POST    /sparql/                     controllers.Sparql.sparqlQuery()

# Loader
GET	     /load                     controllers.Sparql.load()
POST     /load                     controllers.Sparql.load()
# DQP
GET	     /reset           	   		controllers.Sparql.reset()
POST     /reset              	  	controllers.Sparql.reset()
GET	     /addDataSource           	controllers.Sparql.addDataSource(endpoints:String)
POST     /addDataSource           	controllers.Sparql.addDataSource(endpoints:String)
GET	     /setMode		           	controllers.Sparql.setDQPMode(dQPMode:Boolean)
POST     /setMode		           	controllers.Sparql.setDQPMode(dQPMode:Boolean)




# FedEHR
GET	     /fedehr/crawlnode         controllers.ImporterFedEHR.crawlNode()
POST     /fedehr/crawlnode         controllers.ImporterFedEHR.crawlNode()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
