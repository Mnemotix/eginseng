# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#TODO untrail / GET  /*path/  						controllers.Application.untrail(path: String)

# Home page
GET     /                           controllers.Sparql.index()

# SPARQL endpoint
GET     /sparql                     controllers.Sparql.sparqlQuery()
GET     /sparql/                    controllers.Sparql.sparqlQuery()
POST    /sparql                     controllers.Sparql.sparqlQuery()
POST    /sparql/                    controllers.Sparql.sparqlQuery()

# Loader
GET	     /sparql/load                    	controllers.Sparql.load()
POST     /sparql/load                     	controllers.Sparql.load()

# DQP
GET	     /sparql/reset           	   		controllers.Sparql.reset()
POST     /sparql/reset              	  	controllers.Sparql.reset()
GET	     /sparql/addDataSource           	controllers.Sparql.addDataSource(endpoint:String)
POST     /sparql/addDataSource           	controllers.Sparql.addDataSource(endpoint:String)
GET	     /sparql/removeDataSource          	controllers.Sparql.removeDataSource(endpoint:String)
POST     /sparql/removeDataSource          	controllers.Sparql.removeDataSource(endpoint:String)
GET	     /sparql/setDQPMode/:dqpMode        controllers.Sparql.setDQPMode(dqpMode:Boolean)
POST     /sparql/setDQPMode/:dqpMode		controllers.Sparql.setDQPMode(dqpMode:Boolean)
GET	     /sparql/status		           		controllers.Sparql.status()

# FedEHR
GET	     /fedehr/crawlnode         controllers.ImporterFedEHR.crawlNode()
POST     /fedehr/crawlnode         controllers.ImporterFedEHR.crawlNode()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
